                                        <li><a href="#"><i class="fa fa-heart" aria-hidden="true"></i></a></li>
                                        <li><a href="{{ path('produit_show', { 'id': produit.id }) }}"><i class="fa fa-eye" aria-hidden="true"></i></a></li>
                                    </ul>
                                </div>
                            </div>

                            <h5>{{ produit.libelle }}</h5>
                            <h6>$ {{ produit.prix }}</h6>
